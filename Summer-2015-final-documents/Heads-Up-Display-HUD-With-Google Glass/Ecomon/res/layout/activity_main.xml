<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#16a727">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/bt_board3"
                android:background="#FFFFFF" />

            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/bt_board4"
                android:layout_marginLeft="5dp"
                android:background="#FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_below="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:id="@+id/linearLayout">

            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/bt_board1"
                android:background="#FFFFFF"
                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/bt_board2"
                android:layout_marginLeft="5dp"
                android:background="#FFFFFF"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <Button
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:text=""
            android:background="@drawable/voice_icon"
            android:id="@+id/bt_voice"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:gravity="bottom"
            android:layout_marginTop="50dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:background="@drawable/icon_hdpi"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true" />
</RelativeLayout>
