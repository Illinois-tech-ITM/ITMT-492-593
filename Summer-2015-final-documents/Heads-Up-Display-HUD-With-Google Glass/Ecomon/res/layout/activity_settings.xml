<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.iit.hawk.iit.greenmon.activities.Settings"
    android:background="#16a727">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rename the boards"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tb_board1Name"
        android:background="#FFFFFF"
        android:text="BOARD 1"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tb_board2Name"
        android:background="#FFFFFF"
        android:text="BOARD 2"
        android:layout_below="@+id/tb_board1Name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tb_board3Name"
        android:background="#FFFFFF"
        android:text="BOARD 3"
        android:layout_below="@+id/tb_board2Name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tb_board4Name"
        android:background="#FFFFFF"
        android:text="BOARD 4"
        android:layout_below="@+id/tb_board3Name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/bt_submit"
        android:layout_marginTop="42dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        android:textColor="#16a727"
        android:layout_below="@+id/tb_board4Name" />

</RelativeLayout>
